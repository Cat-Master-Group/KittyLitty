<style>
    #signin-container .error-text {
        color: red;
    }
</style>
<form id="signin-form">
    <label for="signin-email">Email: <span id="signin-email-error" class="error-text"></span></label><br>
    <input type="text" id="signin-email" name="signin-email" placeholder="Email" /><br>
    <label for="signin-password">Password: <span id="signin-password-error" class="error-text"></span></label><br>
    <input type="password" id="signin-password" placeholder="Password" /><br>
    <button type="submit" class="btn btn-outline-primary">Submit</button>
    <button type="button" class="btn btn-outline-primary" id="load-signup-button">Load Signup</button>
</form>